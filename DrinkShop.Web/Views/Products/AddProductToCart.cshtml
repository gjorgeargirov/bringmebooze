@model DrinkShop.Domain.DTO.AddToShoppingCartDto


<div class="container py-5">
    <div class="row">
        <div class="col-4 m-auto">
            <h6>Add selected product to User Shopping card</h6>
            <hr />
            <form asp-action="AddProductToCart" method="post">
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group">
                    <label asp-for="SelectedProduct.ProductName"></label>
                    <input disabled hidden asp-for="SelectedProduct.ProductName" class="form-control" />
                    <h6>@Model.SelectedProduct.ProductName </h6>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>